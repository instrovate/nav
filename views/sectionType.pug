doctype html
html
  head
    title Chapter Panel
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/views/css/style.css")
    style body {margin-top:0} li{list-style:none; width:25%; float:left; padding:15px; text-align:center;} .name {font-size:20px; font-weight:bold;} .description{font-size:14px;}
  body
    .container.breadcrumb
      each ch in chapters
       a(href="/admin") Dashboard 
       span >
       a(href="/admin/add-course") Courses
       span >
       a(href="/admin/chapter/"+ch.courseID) Chapters
       span >
       span
        =ch.chapterName 
       .right_nav(style="width:50%")
         a(target="_blank" href="/admin/view-course/"+ch.courseID) View Course
    div.container
     .row
      .col-md-12
       h1.align_center Select the type of content you want to add.
       form(method='POST' action='/get_sectionType')
        .form-group
         label Enter Section Order Number
         input(type="number", name="sectionorder", class="form-control") 
        .form-group
         label Content Type
         select(name="sectionType", class="form-control")
          option(value="text") Text
          option(value="quiz") Quizzes
          option(value="pdf") PDF
          option(value="url") URL
          option(value="video") Video
        input(type="hidden", name="chapter_id", value=id)
        input(type="hidden", name="admin_id", value= admin_id)
        input(type="submit",class="btn btn-primary", name="name", value="submit")
      
    
style .container{background:#f3f3f3; margin-top: 60px; padding-bottom: 30px;}.align_center {text-align:center;}h1 {margin-top: 40px;font-size: 28px;}form{max-width: 600px;  margin: 0 auto; margin-top: 40px; width:100%}
     