doctype html
html
  head
    title Chapter Panel
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/views/css/style.css")
    style body {margin-top:0} li{list-style:none; width:25%; float:left; padding:15px; text-align:center;} .name {font-size:20px; font-weight:bold;} .description{font-size:14px;}
  body
    .container.breadcrumb
      each ch in chapters
       a(href="/admin") Dashboard 
       span >
       a(href="/admin/add-course") Courses
       span >
       a(href="/admin/chapter/"+ch.courseID) Chapters
       span >
       span
       a(href="/admin/sectionType/"+ch._id)=ch.chapterName
       span >
       span=sectionType
    div.container
     .row
       h1.col-md-12.align_center Enter Section Details Here...
       form(method='POST' action='/admin/insert_section' enctype='multipart/form-data')
        .form-group
         label Enter Section Name
         input(type="text", name="sectionname", class="form-control")
        .form-group
         label Insert Url
         input(type="text", name="sectionVideoUrl", class="form-control")
        input(type="hidden", name="chapter_id", value=id)
        input(type="hidden", name="sectionType" value=sectionType)
        input(type="hidden", name="sectionorder" value=order)
        input(type="hidden", name="admin_id" value=admin_id)
        input(type="submit",class="btn btn-primary", name="name", value="submit")
      
    
style .container{background:#f3f3f3; margin-top: 60px; padding-bottom: 30px;}.align_center {text-align:center;}h1 {margin-top: 40px;font-size: 28px;}form{max-width: 600px;  margin: 0 auto; margin-top: 40px; width:100%}
     