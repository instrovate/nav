doctype html
html
  head
    title Course Panel
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style li{list-style:none; width:25%; float:left; padding:15px; text-align:center;} .name {font-size:20px; font-weight:bold;} .description{font-size:14px;}
  body
    div.container
     .row
       h1.col-md-12.align_center
        span=name + ' added'
       div(style="width:100%; float:left; text-align:center; margin:0 15px 15px")
        a(href="/admin/add-course" style="width:100%; text-align:center;text-decoration:none; margin-bottom:5px; padding:5px 15px; background:#0056b3; color:#fff; max-width:200px; margin:0 auto; margin-bottom:10px;") Add Another Course
       div(style="width:100%; float:left; text-align:center; margin:0 15px 15px")
        a(href="/admin/chapter/"+id style="width:100%; text-align:center;text-decoration:none; margin-bottom:5px; padding:5px 15px; background:#0056b3; color:#fff; max-width:200px; margin:0 auto; margin-bottom:10px;") Add Chapter in this Course
       div(style="width:100%; float:left; text-align:center;")
        a(href="/admin" style="width:100%; text-align:center;text-decoration:none; margin-bottom:5px; padding:5px 15px; background:#0056b3; color:#fff; max-width:200px; margin:0 auto; margin-bottom:10px;") Go Back to Dashboard
       
      
    
style .container{background:#f3f3f3; margin-top: 60px; padding-bottom: 30px;}.align_center {text-align:center;}h1 {margin-top: 40px;font-size: 28px;}form{max-width: 600px;  margin: 0 auto; margin-top: 40px; width:100%}
     