doctype html
html
  head
    title Course Panel
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet")
    link(rel="stylesheet", href="/views/css/style.css")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' type='text/javascript')
    script(src="https://cdn.quilljs.com/1.3.6/quill.js")
    script(src="/views/js/myscript.js", type="text/javascript")
    style body {margin-top:0px} li{list-style:none; width:25%; float:left; padding:15px; text-align:center;} .name {font-size:20px; font-weight:bold;} .description{font-size:14px;}
  body
    .container.breadcrumb
     a(href="/admin") Dashboard 
     span >
     span Courses
     .right_nav(style="width:80%")
      a(target="_blank" href="/admin/courses/" ) View All Courses
    div.container
     .row
      .col-md-3.list
       h1 Courses List
       each cour in courses
        p
         if admin_role==1
          a(href="/admin/chapter/"+cour._id)=cour.courseName
         else
          if cour.addedBy==admin_id
           a(href="/admin/chapter/"+cour._id)=cour.courseName

      .col-md-9
       h1.align_center Add Course
       form(method='POST' action='/insert_course' enctype= "multipart/form-data")
        .form-group
         label Enter Course Name
         input(type="text", name="coursename", class="form-control")
        .form-group
         label Course Featured Image
         input(type="file", name="courseImg", class="form-control")
        .form-group
         label About Course
         input(type="text", name="courseabout", class="form-control")
        .form-group
         label Enter Course Description
         
         textarea(name="coursedescription",class="form-control", id="editor")
         input(type="hidden", name="admin_id", value= admin_id)
         input(type="submit",class="btn btn-primary", name="name", value="submit")
      
    
style .container{background:#f3f3f3; margin-top: 60px; padding-bottom: 30px;}.align_center {text-align:center;}h1 {margin-top: 40px;font-size: 28px;}form{max-width: 600px;  margin: 0 auto; margin-top: 40px; width:100%}
     
