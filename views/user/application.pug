doctype html
html
  head
   title Chapter Panel
   meta(name="viewport" content="width=device-width, initial-scale=1")
   link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
   link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
   script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' type='text/javascript')
   script(src='https://stackpath.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' type='text/javascript')
   meta(name="viewport" content="width=device-width, initial-scale=1")
   script(src="/views/js/myscript.js" type='text/javascript')
  
   link(rel="stylesheet", href="/views/css/style.css")
  body
    include ../inc/header
    div.container.steps_panel
       ul.steps
        li.active_nav Step 1
        li Step 2
        li Step 3
        li Step 4
       form(action="/apply" method="post")
         
        .form-group.row 
         h5 Apply as a:
         .col-md-4.usertype
          input(type="checkbox" name="usertype[]" class="form-control" value="trainer" )
          label Trainer
         .col-md-4.usertype
          input(type="checkbox" name="usertype[]" class="form-control" value="mentor" )
          label Mentor
         .col-md-4.usertype
          input(type="checkbox" name="usertype[]" class="form-control" value="consultant")
          label Consultant
        .form-group.row
         .col-md-6
          label First Name
          input(type='text' name='f_name' class="form-control" required)
         .col-md-6
          label Last Name
          input(type='text' name='l_name' class="form-control" required)
        .form-group
          label Enter Email
          input(type='email' name='email' class="form-control" required)
        .form-group
          label Enter Mobile
          input(type='number' name='mobile' class="form-control" required)
        .form-group 
          label Select Gender 
          select(name='gender' class="form-control" required)
           option(value="male") male
           option(value="female") female
           option(value="other") other
        input(type='submit' name='apply' value='Next' class="btn btn-success")

    include ../inc/footer
    style .btn-success{margin-top:15px;} .container{ margin-top: 0px; padding-bottom: 30px;}.align_center {text-align:center;}h1 {margin-top: 40px;font-size: 28px;}
