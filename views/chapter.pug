doctype html
html
  head
    title Chapter Panel
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/views/css/style.css")
    style body {margin-top:0} li{list-style:none; width:25%; float:left; padding:15px; text-align:center;} .name {font-size:20px; font-weight:bold;} .description{font-size:14px;}
  body
    .container.breadcrumb
     a(href="/admin") Dashboard 
     span >
     a(href="/admin/add-course") Courses
     span >
     span
      each co in courses
       =co.courseName
     .right_nav
      a(target="_blank" href="/admin/view-course/"+id ) View Course 
    div.container
     .row
      .col-md-3.list
       h1 Chapter List
       each chap in chapters
        p
         a(href="/admin/sectionType/"+chap._id)=chap.chapterName
      .col-md-9
       h1.align_center Add Chapter Here...
       form(method='POST' action='/insert_chapter')
        .form-group
         label Enter Chapter Name
         input(type="text", name="chaptername", class="form-control")
        .form-group 
         label Enter Chapter Order Number
         input(type="number", name="chapterorder", class="form-control")
        input(type="hidden", name="course_id", value=id)
        input(type="hidden", name="admin_id", value= admin_id)
        input(type="submit",class="btn btn-primary", name="name", value="submit")
      
    
style .container{background:#f3f3f3; margin-top: 60px; padding-bottom: 30px;}.align_center {text-align:center;}h1 {margin-top: 40px;font-size: 28px;}form{max-width: 600px;  margin: 0 auto; margin-top: 40px; width:100%}
     